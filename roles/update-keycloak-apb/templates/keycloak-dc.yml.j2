apiVersion: v1
kind: DeploymentConfig
metadata:
  labels:
    app: {{ application_name }}
    service: {{ application_name }}
  name: {{ application_name }}
  namespace: {{ namespace }}
spec:
  replicas: 1
  selector:
    app: {{ application_name }}
    service: {{ application_name }}
  template:
    metadata:
      labels:
        app: {{ application_name }}
        service: {{ application_name }}
    spec:
      containers:
      - name: keycloak
        readinessProbe:
          initialDelaySeconds: 40
          failureThreshold: 10
          httpGet:
            path: /
            port: web
        livenessProbe:
          initialDelaySeconds: 200
          httpGet:
            path: /
            port: web
        env:
        - name: KEYCLOAK_USER
          value: {{ admin_username }}
        - name: KEYCLOAK_PASSWORD
          value: {{ admin_password }}
        - name: PROXY_ADDRESS_FORWARDING
          value: 'true'
        - name: DB_VENDOR
          value: {{ db_vendor }}
        ports:
        - containerPort: 8080
          protocol: TCP
          name: web
        resources: {}
